@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V2</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../fonts/iconic/css/material-design-iconic-font.css">
    <link rel="stylesheet" type="text/css" href="../../vendor/animate/animate.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../../vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="../../vendor/animsition/css/animsition.min.css">
    <link href="../../css/util.css" rel="stylesheet">
    <link href="../../css/main.css" rel="stylesheet">

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form asp-controller="Home" asp-action="Register" class="login100-form validate-form">
                    <span class="login100-form-title p-b-48">
                        <img style="border-radius: 13px; width: 90%" src="../../img/logo.png" />
                    </span>
                    <div style="margin-bottom: 37px">
                        <div class="wrap-input100">
                            <input class="input100" asp-for="FirstName">
                            <span class="focus-input100" data-placeholder="İsim"></span>
                        </div>
                        <span asp-validation-for="FirstName" class="text text-danger small"></span>
                    </div>

                    <div style="margin-bottom: 37px">
                        <div class="wrap-input100">
                            <input class="input100" asp-for="LastName">
                            <span class="focus-input100" data-placeholder="Soyisim"></span>
                        </div>
                        <span asp-validation-for="LastName" class="text text-danger small"></span>
                    </div>
                    
                    <div style="margin-bottom: 37px">
                        <div class="wrap-input100">
                            <input class="input100" asp-for="Username">
                            <span class="focus-input100" data-placeholder="Kullanıcı Adı"></span>
                        </div>
                        <span asp-validation-for="Username" class="text text-danger small input-validation"></span>
                    </div>

                    <div style="margin-bottom: 37px">
                        <div class="wrap-input100">
                            <input class="input100" asp-for="Email">
                            <span class="focus-input100" data-placeholder="Email"></span>
                        </div>
                        <span asp-validation-for="Email" class="text text-danger small input-validation"></span>
                    </div>

                    <div style="margin-bottom: 37px">
                        <div class="wrap-input100">
                            <span class="btn-show-pass">
                                <i class="zmdi zmdi-eye"></i>
                            </span>
                            <input class="input100" asp-for="Password">
                            <span class="focus-input100" data-placeholder="Şifre"></span>
                        </div>
                        <span asp-validation-for="Password" class="text text-danger small"></span>
                    </div>


                    <div style="margin-bottom: 37px">
                        <div class="wrap-input100">
                            <span class="btn-show-pass">
                                <i class="zmdi zmdi-eye"></i>
                            </span>
                            <input class="input100" asp-for="ConfirmPassword">
                            <span class="focus-input100" data-placeholder="Şifre Tekrar"></span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text text-danger small"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text text-danger small"></div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Kayıt Ol
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Bir hesabınız var mı?
                        </span>

                        <a class="txt2" asp-action="Login">
                            Giriş Yap
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        window.onload = function() {
            document.querySelector("#FirstName").focus();
            document.querySelector("#LastName").focus();
            document.querySelector("#Username").focus();
            document.querySelector("#Email").focus();
            document.querySelector("#Email").blur();
        };
    </script>

    <div id="dropDownSelect1"></div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="../../vendor/animsition/js/animsition.js"></script>
    <script src="../../js/login.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>


</body>
</html>